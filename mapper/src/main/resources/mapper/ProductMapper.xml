<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ztwo.fmmall.dao.ProductMapper">

    <resultMap id="BaseResultMap" type="com.ztwo.fmmall.bean.Product">
        <id column="product_id" jdbcType="VARCHAR" property="productId"/>
        <result column="product_name" jdbcType="VARCHAR" property="productName"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="root_category_id" jdbcType="INTEGER" property="rootCategoryId"/>
        <result column="sold_num" jdbcType="INTEGER" property="soldNum"/>
        <result column="product_status" jdbcType="INTEGER" property="productStatus"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>

    <resultMap id="productVOMapper" type="com.ztwo.fmmall.bean.ProductVO">
        <id column="product_id" jdbcType="VARCHAR" property="productId"/>
        <result column="product_name" jdbcType="VARCHAR" property="productName"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="root_category_id" jdbcType="INTEGER" property="rootCategoryId"/>
        <result column="sold_num" jdbcType="INTEGER" property="soldNum"/>
        <result column="product_status" jdbcType="INTEGER" property="productStatus"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
        <collection property="imgList" column="product_id"
                    select="com.ztwo.fmmall.dao.ProductImgMapper.selectProductImgById"/>
    </resultMap>

    <select id="selectRecommendProduct" resultMap="productVOMapper">
        select product_id,
               product_name,
               category_id,
               root_category_id,
               sold_num,
               product_status,
               create_time,
               update_time,
               content
        from product
        ORDER BY create_time DESC LIMIT 0,3
    </select>

    <select id="selectTop6ByCategory" resultMap="productVOMapper">
        select product_id,
               product_name,
               category_id,
               root_category_id,
               sold_num,
               product_status,
               create_time,
               update_time,
               content
        from product
        WHERE root_category_id = #{cid}
        ORDER BY sold_num desc LIMIT 0,6
    </select>

</mapper>